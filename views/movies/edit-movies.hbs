
<form action="/movies/{{myMovie._id}}/update" method="post">

  <input value= {{myMovie.title}} type="text" name="title" placeholder="Title: "/>

  <input value={{myMovie.genre}}type="text" name="genre" placeholder="Movie genre: " />

  <input value={{myMovie.plot}}type="text" name="plot" placeholder="Plot: " />

  <select name="cast" id="id" defaultValue= {{myMovie.cast}} multiple>
    {{#each allcelebrities}}

      <option value="{{this._id}}">{{this.name}} </option>

    {{/each}}
  </select>

  <button>Create a new movie</button>

</form>

